<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <button class="btn btn-primary btn-block" id="addPerson">
            Add Person
        </button>
    </div>
</div>

<div style="margin-top: 20px;">
    <table class="table table-hover table-striped table-bordered" id="personsTable">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </table>
</div>

<div class="modal fade addPersonModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add Person</h4>
            </div>
            <div class="modal-body">
                <input type="text" class="input form-control" placeholder="First Name" id="firstName"/>
                <br /><br />
                <input type="text" class="input form-control" placeholder="Last Name" id="lastName"/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary savePerson">Submit</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade addCarModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add Car</h4>
            </div>
            <div class="modal-body">
                <input type="text" class="input form-control" placeholder="Make" id="make" />
                <br /><br />
                <input type="text" class="input form-control" placeholder="Model" id="model"/>
                <br /><br />
                <input type="text" class="input form-control" placeholder="Year" id="year" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary saveCar">Submit</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade viewCarsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">View Cars</h4>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-hover table-striped car-table">
                    <tr>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Year</th>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

